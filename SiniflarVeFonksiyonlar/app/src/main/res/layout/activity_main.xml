<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textSonuc"
        android:layout_width="198dp"
        android:layout_height="0dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="277dp"
        android:layout_marginBottom="45dp"
        android:text="Sonuç: "
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="67dp"
        android:text="Toplama"
        app:layout_constraintBottom_toTopOf="@+id/textSonuc"
        app:layout_constraintEnd_toEndOf="@+id/textSonuc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="169dp"
        android:text="Sonuç: "
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textSonuc"
        app:layout_constraintStart_toStartOf="@+id/textSonuc"
        app:layout_constraintTop_toBottomOf="@+id/textSonuc" />
</androidx.constraintlayout.widget.ConstraintLayout>